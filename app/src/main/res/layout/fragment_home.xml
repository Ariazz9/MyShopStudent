<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:orientation="vertical"
    android:gravity="center"
    >
    <ImageView
        android:id="@+id/ugm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_ugm2"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:id="@+id/gadjah"
        android:layout_width="350dp"
        android:layout_height="63dp"
        android:scaleType="centerCrop"
        android:src="@drawable/gadjah" />

    <androidx.cardview.widget.CardView

        android:id="@+id/profile_card"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginHorizontal="56dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="56dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#D9FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginTop="30dp"
            android:padding="18dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/profil"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="90dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="98dp"
                    android:layout_height="96dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatarrrr" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_below="@id/profil"
                android:layout_marginTop="20dp"
                android:id="@+id/view_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/nama_label" />

            <TextView
                android:layout_below="@id/view_Name"
                android:id="@+id/view_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/nim_label" />


            <TextView
                android:layout_below="@id/view_alamat"
                android:id="@+id/view_NIM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/alamat_label" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_alamat"
                android:layout_marginTop="70dp"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:text="Edit Profile"
                    />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>